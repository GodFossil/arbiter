{
  "server": {
    "cleanupIntervalMinutes": 3
  },
  "cache": {
    "maxSourceMappings": 1000,
    "maxAnalysisCacheSize": 500,
    "maxMessageCacheSize": 2000,
    "maxValidationCacheSize": 1500
  },
  "storage": {
    "maxContextMessagesPerChannel": 200
  },
  "mongodb": {
    "maxPoolSize": 20,
    "ttlCleanupDays": 60
  },
  "limits": {
    "aiConcurrency": 5,
    "exaConcurrency": 3
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 1,
    "maxRetriesPerRequest": 5,
    "retryDelayOnFailover": 200
  },
  "queues": {
    "contradiction": {
      "concurrency": 3,
      "removeOnComplete": 20,
      "removeOnFail": 50
    },
    "misinformation": {
      "concurrency": 3,
      "removeOnComplete": 20,
      "removeOnFail": 50
    },
    "summarization": {
      "concurrency": 2,
      "removeOnComplete": 10,
      "removeOnFail": 20
    },
    "userReply": {
      "concurrency": 5,
      "removeOnComplete": 20,
      "removeOnFail": 50
    }
  },
  "logging": {
    "level": "info",
    "enableCorrelationIds": true,
    "enablePerformanceTracking": true
  }
}
